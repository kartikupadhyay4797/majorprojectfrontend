<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frame_in_register"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:padding="16dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="register"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="#000000"
            />
        <View
            android:layout_width="100dp"
            android:layout_marginTop="8dp"
            android:layout_height="2dp"
            android:background="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="Create your own account"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="24dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:visibility="invisible"
            android:id="@+id/nametextviewtoregister"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your full name here..."
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@drawable/login_all_side_borders"
            android:textSize="18sp"
            android:padding="6dp"
            android:id="@+id/nameedittoregister"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:visibility="invisible"
            android:id="@+id/contacttextviewtoregister"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your Address here..."
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@drawable/login_all_side_borders"
            android:textSize="18sp"
            android:padding="6dp"
            android:id="@+id/contactedittoregister"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:visibility="invisible"
            android:id="@+id/passwordtextviewtoregister"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:orientation="horizontal"
            android:background="@drawable/login_all_side_borders">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:hint="Type your Email Id here..."
                android:layout_marginRight="4dp"
                android:background="#0000"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="18sp"
                android:id="@+id/passwordedittoregister"/>
            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer Code"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:visibility="invisible"
            android:id="@+id/refercodetextviewtoregister"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type refer code here...(if any)"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@drawable/login_all_side_borders"
            android:textSize="18sp"
            android:padding="6dp"
            android:id="@+id/refercodeedittoregister"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:background="@drawable/login_button_shape"
                    android:text="signup"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/registerkeytext"/></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:background="@drawable/signup_background"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:id="@+id/signinregistertextview"
                    /></LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:id="@+id/progress_in_register"
        android:visibility="gone"/>
</FrameLayout>